@{
    ViewBag.Title = "Home";
}

<div class="jumbotron">
    <h1>Upstate Job Hunter</h1>
    <p class="lead"><i>We're here to help find the right job for you!</i></p>
    <p><a href="/Home/About" class="btn btn-primary btn-lg">Learn More About Us &raquo;</a></p>
</div>

<div class="searchControl">
    @using (Html.BeginForm("Search", "Search", FormMethod.Get))
    {
        <div class="input-group">
            <input type="text" name="SearchString" class="form-control" placeholder="type something and hit enter">
            <span class="input-group-btn">
                <input class="btn" type="submit" value="Search!" />
            </span>
        </div><!-- /input-group -->
    }
</div>

  

<div class="row">
    <div class="col-md-4">
        <h2>Find A Listing</h2>
        <p>
            Job listings are posted here<br />Click the button to start searching
        </p>
        <p><a class="btn btn-default" href="/Listings/Index">Job Listings &raquo;</a></p>
    </div>
    <div class="col-md-4">
        <h2>Create An Account</h2>
        <p>Sign up in order to find jobs and post reviews<br />Click the button to sign up</p>
        <p><a class="btn btn-default" href="/Users/Create">Sign Up &raquo;</a></p>
    </div>
    <div class="col-md-4">
        <h2>Have A Question?</h2>
        <p>Please send us a message if you have any questions<br />Click the button to send a message</p>
        <p><a class="btn btn-default" href="/Messages/Index">Send A Message &raquo;</a></p>
    </div>
</div>